on init
    chown root system /proc/touchscreen_feature/gesture_data
    chown root system /proc/touchscreen_feature/gesture_type
    chown root system /proc/touchscreen_feature/gesture_onoff
    chown root system /proc/touchscreen_feature/glove_onoff
    chown root system /proc/touchscreen_feature/version
    chown root system /proc/touchscreen_feature/gesture_coordinate

service vendor.touch-hal-1-0 /vendor/bin/hw/vendor.lineage.touch@1.0-service.xiaomi_mido
    class hal
    user system
    group system
